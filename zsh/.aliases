# Unix
# Use GNU ls on macOS (requires coreutils), native ls on Linux
if command -v gls &> /dev/null; then
  alias ls="gls --color"
else
  alias ls="ls --color=auto"
fi
alias ll="ls -alh"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias auxp="lsof -i"
# Use pgrep for process searching (aux="ps aux | grep" greps itself)
alias psg="ps aux | grep -v grep | grep"
alias ka="killall -9"
alias kan="killall -9 node"

# copilot cli
alias gce="gh copilot explain "
alias gcs="gh copilot suggest "

# go - air (live reload for Go apps)
# Cache GOPATH at shell startup to avoid running go env on every invocation
if command -v go &> /dev/null; then
  _gopath="$(go env GOPATH 2>/dev/null)"
  [[ -n "$_gopath" ]] && alias air="$_gopath/bin/air"
  unset _gopath
fi

#vim
alias v="nvim"
alias vim="nvim"

# Typo
alias cd..="cd .."

# Emacs
alias e="emacsclient -t -a ''"
alias ec="emacsclient -c -n -a ''"

# Tmux
alias ta='tmux attach'
alias tn='tmux new'
alias tls='tmux list-sessions'

# Bundler
alias b="bundle"
alias be="bundle exec"

# Pretty print the PATH env
alias path='echo $PATH | tr -s ":" "\n"'

# yarn
alias yd="yarn dev"

# Include custom aliases
[[ -f "$HOME/.aliases.local" ]] && source "$HOME/.aliases.local"
