# Unix
# Use GNU ls on macOS (requires coreutils), native ls on Linux
if command -v gls &> /dev/null; then
  alias ls="gls --color"
else
  alias ls="ls --color=auto"
fi
alias ll="ls -alh"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias auxp="lsof -i"
# Process search with highlighted matches (avoids grep matching itself)
psg() { ps aux | grep -E "^USER|$1" | grep -v "grep -E"; }
alias ka="killall -9"
alias kan="killall -9 node"

# copilot cli
alias gce="gh copilot explain "
alias gcs="gh copilot suggest "

# go - air (live reload for Go apps)
# Check default GOPATH first, then GOPATH env, then `go env` as fallback
if [[ -x "$HOME/go/bin/air" ]]; then
  alias air="$HOME/go/bin/air"
elif [[ -n "$GOPATH" && -x "$GOPATH/bin/air" ]]; then
  alias air="$GOPATH/bin/air"
elif command -v go &>/dev/null; then
  _gopath="$(go env GOPATH 2>/dev/null)"
  [[ -n "$_gopath" && -x "$_gopath/bin/air" ]] && alias air="$_gopath/bin/air"
  unset _gopath
fi

#vim
alias v="nvim"
alias vim="nvim"

# Typo
alias cd..="cd .."

# Emacs
alias e="emacsclient -t -a ''"
alias ec="emacsclient -c -n -a ''"

# Tmux
alias ta='tmux attach'
alias tn='tmux new'
alias tls='tmux list-sessions'

# Bundler
alias b="bundle"
alias be="bundle exec"

# Pretty print the PATH env
alias path='echo $PATH | tr -s ":" "\n"'

# yarn
alias yd="yarn dev"

# Include custom aliases
[[ -f "$HOME/.aliases.local" ]] && source "$HOME/.aliases.local"
